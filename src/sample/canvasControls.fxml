<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import sample.SubComponent?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.FXMLCanvasControls">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

    <Text text="Canvas Controls" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Size:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="size" onAction="#handleSizeChange" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="center" GridPane.columnIndex="0" GridPane.rowIndex="2" >
        

    </Label>

    <TextField fx:id="centerX" onAction="#handleCenterXChange" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <TextField fx:id="centerY" onKeyTyped="#handleCenterYChange" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#onClear" text="Clear" />
    </HBox>

    <Slider
           GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label
           text="Center"
           GridPane.rowIndex="3" />

    <Slider
           GridPane.columnIndex="2"
           GridPane.rowIndex="3" />

    <Label
            text="Background Color"
            GridPane.rowIndex="4" />

    <ColorPicker
            fx:id="background"
            onAction="#handleBackgroundChange"
            GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4"/>

    <Spinner fx:id="spinner"
             GridPane.columnIndex="0" GridPane.rowIndex="5">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="10"/>
        </valueFactory>
    </Spinner>

    <fx:include source="subComponent.fxml"/>

</GridPane>
