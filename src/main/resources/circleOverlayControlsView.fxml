<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import paul.wintz.javafx.widgets.*?>
<GridPane
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/8.0.121"
        fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.CircleOverlayControlsView"
        alignment="CENTER_LEFT"
        hgap="10"
        vgap="10">

    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <GridPane
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="2"
            hgap="10"
            vgap="10"
            alignment="CENTER_LEFT">
        <Label
                text="Circles"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
                GridPane.halignment="RIGHT"/>
        <Label
                text="Radii"
                GridPane.columnIndex="1"
                GridPane.rowIndex="0"
                GridPane.halignment="RIGHT"/>
        <Label
                text="Inner Radii"
                GridPane.columnIndex="2"
                GridPane.rowIndex="0"
                GridPane.halignment="RIGHT"/>
        <BooleanToggle
                fx:id="showCircles"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                GridPane.halignment="RIGHT"/>
        <BooleanToggle
                fx:id="showRadii"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"
                GridPane.halignment="RIGHT" />
        <BooleanToggle
                fx:id="showInnerRadii"
                GridPane.columnIndex="2"
                GridPane.rowIndex="1"
                GridPane.halignment="RIGHT" />
    </GridPane>

    <Label
            text="Stroke Weight"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            GridPane.halignment="RIGHT" />
    <IntegerSlider
            fx:id="circleStrokeWeight"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4" />

    <Label
            text="Tracer Dot Size"
            GridPane.columnIndex="0"
            GridPane.rowIndex="5"
            GridPane.halignment="RIGHT" />
    <IntegerSlider
            fx:id="tracerDotSize"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5" />

    <Label
            text="Color"
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            GridPane.halignment="RIGHT"/>
    <ColorSelector
            fx:id="circleColor"
            GridPane.columnIndex="1"
            GridPane.rowIndex="6" />

</GridPane>