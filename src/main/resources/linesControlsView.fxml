<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import paul.wintz.javafx.widgets.IntegerSlider?>
<?import paul.wintz.javafx.widgets.EquationField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.LinesControlsView"
          minWidth="300" minHeight="300"
          alignment="center"
          hgap="10" vgap="10">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <Label text="Segments"
           GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <IntegerSlider fx:id="segments"
           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Direction" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <EquationField fx:id="direction" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Start displacement" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <EquationField fx:id="lineStart" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="End displacement" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <EquationField fx:id="lineEnd" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>