<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import paul.wintz.javafx.widgets.IntegerSpinner?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.CircleControlsView"
          prefHeight="10.0" prefWidth="80.0"
          hgap="10" vgap="5">

    <padding>
        <Insets bottom="5" left="10" right="10" top="5"/>
    </padding>

    <Label text="Radius" minWidth="50"
           GridPane.rowIndex="0" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT"
           textAlignment="RIGHT"/>
    <IntegerSpinner fx:id="radius" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label fx:id="velocityLabel"
           text="Velocity"  minWidth="50"
           GridPane.rowIndex="1" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT"
           textAlignment="RIGHT"/>
    <IntegerSpinner fx:id="velocity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

</GridPane>
