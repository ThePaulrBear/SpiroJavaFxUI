<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import paul.wintz.javafx.widgets.IntegerSpinner?>
<?import paul.wintz.javafx.widgets.ListSpinner?>

<GridPane
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/8.0.121"
        fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.SpeedControlsController"
        alignment="center"
        hgap="10"
        vgap="10">

    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <Label
            fx:id="targetSpeedLabel"
            text="Target Speed"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.halignment="RIGHT" />
    <IntegerSpinner
            fx:id="targetSpeedSpinner"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0" />

    <Label
            fx:id="instantCountLabel"
            text="Instant Count"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.halignment="RIGHT" />
    <IntegerSpinner
            fx:id="instantCountSpinner"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1" />

</GridPane>