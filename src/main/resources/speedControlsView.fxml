<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import paul.wintz.javafx.widgets.IntegerSpinner?>
<?import paul.wintz.javafx.widgets.ListSpinner?>

<Tab xmlns:fx="http://javafx.com/fxml/1"
     xmlns="http://javafx.com/javafx/8.0.121"
     text="Speed"
     fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.SpeedControlsController">

    <GridPane
        alignment="center"
        hgap="10"
        vgap="10">

        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

        <Text
                text="Speed Controls"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.rowIndex="0" />

        <Label
                fx:id="targetSpeedLabel"
                text="Target Speed"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2" />

        <IntegerSpinner
                fx:id="targetSpeedSpinner"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2" />

        <Label
                fx:id="instantCountLabel"
                text="Instant Count"
                GridPane.columnIndex="0"
                GridPane.rowIndex="3" />

        <IntegerSpinner
                fx:id="instantCountSpinner"
                GridPane.columnIndex="1"
                GridPane.rowIndex="3" />

    </GridPane>
</Tab>
