<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import paul.wintz.javafx.widgets.IntegerSpinner?>
<?import paul.wintz.javafx.widgets.StringField?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.StandardDrawerControlsView"
          minWidth="10" minHeight="10"
          alignment="CENTER_LEFT"
          hgap="10" vgap="10">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="Count"
           GridPane.rowIndex="0" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" />
    <IntegerSpinner fx:id="instantsPerFrame"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Grid Start"
           GridPane.rowIndex="1" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" />
    <StringField fx:id="gridStart"
                 GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Grid End"
           GridPane.rowIndex="2" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" />
    <StringField fx:id="gridEnd"
                 GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Visible Start"
           GridPane.rowIndex="3" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" />
    <StringField fx:id="visibleStart"
                 GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Visible End"
           GridPane.rowIndex="4" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" />
    <StringField fx:id="visibleEnd"
                 GridPane.rowIndex="4" GridPane.columnIndex="1"/>

</GridPane>