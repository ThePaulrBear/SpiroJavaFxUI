<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<Tab
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/8.0.121"
        text="Style"
        fx:controller="paul.wintz.parametricequationdrawer.controllers.javafx.StyleControlsView">

    <GridPane
            alignment="center"
            hgap="10"
            vgap="10">

        <padding>
            <Insets bottom="25" left="25" right="25" top="25"/>
        </padding>

        <Label text="Stroke Weight" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="sizeEquation" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Red" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="redEquation" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Green" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="greenEquation" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Blue" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="blueEquation" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Alpha" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="alphaEquation" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    </GridPane>
</Tab>